{
  "tasks": {
    "compile": "FILE=resourceCard && deno bundle --watch ./components/src/$FILE.ts ./components/dist/$FILE.js"
  },
  "compilerOptions": {
    "removeComments": true,
    "lib": ["esnext", "dom", "dom.iterable", "deno.ns"],
    "experimentalDecorators": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "importsNotUsedAsValues": "preserve"
  },
  "lint": {
    "files": {
      "exclude": [
        "jsoneditor.js"
      ]
    }
  }
}
