{
  "title": "Stage",
  "type": "object",
  "format": "categories",
  "options": {
    "use_name_attributes": true
  },
  "required": [
    "name",
    "description",
    "pasive",
    "tags"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "format": "textarea",
      "maxLength": 512
    },
    "pasive": {
      "type": "array",
      "title": "Pasive",
      "format": "tabs-top",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "headerTemplate": "{{self.name}}",
        "enum": "#effect",
        "options": {
          "enum_titles": "$effect"
        }
      }
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "format": "",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "options": {
          "compact": true
        },
        "enum": ["Fire", "Water", "Nature"]
      }
    }
  }
}
