{
  "title": "Item",
  "type": "object",
  "format": "categories",
  "options": {
    "use_name_attributes": true
  },
  "required": [
    "name",
    "description",
    "stats",
    "active",
    "pasive",
    "tags",
    "isShared"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "format": "textarea",
      "maxLength": 512
    },
    "stats": {
      "type": "array",
      "title": "Statistics",
      "format": "tabs-top",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "headerTemplate": "{{self.key}}",
        "options": {
          "compact": true
        },
        "properties": {
          "key": {
            "type": "string",
            "maxLength": 20
          },
          "value": {
            "type": "string",
            "maxLength": 20
          }
        }
      }
    },
    "active": {
      "type": "array",
      "title": "Active",
      "format": "tabs-top",
      "uniqueItems": true,
      "items": {
        "headerTemplate": "{{title}}",
        "type": "object",
        "enum": [
          "#effect"
        ],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "id": { "type": "string", "options": { "hidden": true } }
        }
      }
    },
    "pasive": {
      "type": "array",
      "title": "Pasive",
      "format": "tabs-top",
      "items": {
        "type": "string",
        "headerTemplate": "{{self}}",
        "enum": ["#effect", "#effect", "#effect", "#effect"]
      },
      "options": {
        "grid_columns": 4
      }
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "format": "checkbox",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "options": {
          "compact": true
        },
        "enum": ["Fire", "Water", "Nature"]
      }
    },
    "isShared": {
      "type": "boolean",
      "format": "checkbox"
    }
  }
}
