{
  "title": "Effect",
  "type": "object",
  "format": "categories",
  "options": {
    "use_name_attributes": true
  },
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "format": "textarea",
      "maxLength": 512
    },
    "code": {
      "type": "string",
      "format": "javascript",
      "options": {
        "ace": {
          "theme": "ace/theme/monokai",
          "tabSize": 2,
          "useSoftTabs": true,
          "wrap": true
        }
      }
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "format": "",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "options": {
          "compact": true
        },
        "enum": ["Fire", "Water", "Nature"]
      }
    },
    "isShared": {
      "type": "boolean",
      "format": "checkbox"
    }
  }
}
