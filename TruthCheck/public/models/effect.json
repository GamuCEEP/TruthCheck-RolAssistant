{
  "title": "Effect",
  "type": "object",
  "format": "categories",
  "options": {
    "use_name_attributes": true
  },
  "required": [
    "name",
    "description",
    "code",
    "tags",
    "isShared"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "format": "textarea",
      "maxLength": 512
    },
    "code": {
      "type": "object",
      "title": "Code",
      "options":{
        "compact": true
      },
      "properties": {
        "code": {
          "type": "string",
          "format": "javascript",
          "options": {
            "compact": true
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "format": "",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "options": {
          "compact": true
        },
        "enum": ["Fire", "Water", "Nature"]
      }
    },
    "isShared": {
      "type": "boolean",
      "format": "checkbox"
    }
  }
}
