{
  "title": "Actor",
  "type": "object",
  "format": "categories",
  "required": [
    "name",
    "description",
    "stats",
    "active",
    "pasive",
    "inventory",
    "equipment",
    "tags"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "format": "textarea",
      "maxLength": 512,
      "options": {
      }
    },
    "stats": {
      "type": "array",
      "title": "Statistics",
      "format": "tabs-top",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "headerTemplate": "{{self.key}}",
        "options": {
          "compact": true
        },
        "properties": {
          "key": {
            "type": "string",
            "maxLength": 20,
            "title": "Key"
          },
          "value": {
            "type": "string",
            "maxLength": 20,
            "title": "Value"
          }
        }
      }
    },
    "active": {
      "type": "array",
      "title": "Active",
      "format": "tabs-top",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "headerTemplate": "{{self.name}}",
        "enum": "#effect",
        "options": {
          "enum_titles": "$effect"
        }
      }
    },
    "pasive": {
      "type": "array",
      "title": "Pasive",
      "format": "tabs-top",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "headerTemplate": "{{self.name}}",
        "enum": "#effect",
        "options": {
          "enum_titles": "$effect"
        }
      }
    },
    "inventory": {
      "type": "array",
      "title": "Inventory",
      "format": "tabs-top",
      "uniqueItems": false,
      "items": {
        "type": "object",
        "headerTemplate": "{{self.name}}",
        "enum": "#item",
        "options": {
          "enum_titles": "$item"
        }
      }
    },
    "equipment": {
      "type": "array",
      "title": "Equipment",
      "format": "tabs-top",
      "uniqueItems": false,
      "items": {
        "type": "object",
        "headerTemplate": "{{self.name}}",
        "enum": "#item",
        "options": {
          "enum_titles": "$item"
        }
      }
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "format": "checkbox",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "options": {
          "compact": true
        },
        "enum": ["Fire", "Water", "Nature"]
      }
    }
  }
}
